<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 书籍封面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <io.legado.app.ui.widget.image.CoverImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/img_cover"
                android:scaleType="centerCrop"
                android:src="@drawable/image_cover_default"
                android:transitionName="img_cover"
                tools:ignore="UnusedAttribute" />

            <!-- 状态标签 -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:background="@drawable/bg_status_tag"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="完结"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- 书籍信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 书名 -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="这是一本非常好看的小说书名" />

            <!-- 作者 -->
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="10sp"
                tools:text="作者名称" />

            <!-- 标签 -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="20dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="玄幻"
                    android:textSize="8sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipStrokeWidth="0dp"
                    style="@style/Widget.Material3.Chip.Assist" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="热血"
                    android:textSize="8sp"
                    app:chipBackgroundColor="?attr/colorSecondaryContainer"
                    app:chipStrokeWidth="0dp"
                    style="@style/Widget.Material3.Chip.Assist" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
